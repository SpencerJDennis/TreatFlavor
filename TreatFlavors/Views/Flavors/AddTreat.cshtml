@{
  Layout = "_Layout";
}

@model TreatFlavors.Models.Flavor

<h2>Add a new Treat</h2>

<h3>Add a new Treat for this Flavor: @Html.DisplayFor(model => model.FlavorName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select Treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>